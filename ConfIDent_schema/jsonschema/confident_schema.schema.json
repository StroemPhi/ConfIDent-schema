{
   "$defs": {
      "AcademicEvent": {
         "additionalProperties": false,
         "description": "An academic event is part of the established instruments of science communication as a format for conveying the latest scientific outputs. It is defined by the meeting of researchers at a specific time and place (virtual or physical) and with a specific thematic focus to present, hear and discuss these outputs. In contrast to other forms of events, academic events should primarily serve the exchange of results and methods of scientific research and their didactic mediation.  Furthermore, a significant participation of scientific organizations in the realization of an academic event is constitutive for this type of event; for example, to distinguish it from events in which researchers mainly act as external experts or with a purely legitimising function.",
         "properties": {
            "academic_fields": {
               "description": "A property used to describe the scientific subject of the planned process according to some controlled vocabulary or thesaurus. Requires the as subproperties the name and if possible the URL of the identifiying scheme.",
               "items": {
                  "$ref": "#/$defs/AcademicField"
               },
               "type": "array"
            },
            "alternative_ids": {
               "items": {
                  "$ref": "#/$defs/Identifier"
               },
               "type": "array"
            },
            "at_location": {
               "$ref": "#/$defs/Location"
            },
            "contact": {
               "type": "string"
            },
            "deadlines": {
               "items": {
                  "$ref": "#/$defs/Deadline"
               },
               "type": "array"
            },
            "denoted_by": {
               "$ref": "#/$defs/ProcessName",
               "description": "'denoted_by' used to refer to the name of the academic event or series, which itself has further properties to specify its type (e.g. official name, acronym, etc)."
            },
            "end_date": {
               "description": "Similar to start_date but only for the end of an academic event or event series.",
               "format": "date-time",
               "type": "string"
            },
            "event_format": {
               "$ref": "#/$defs/EventFormat",
               "description": "The sociocultural event format which is specified by the organizers, e.g. conference. Possible values are defined in the EventFormat enum, which uses the named individuals defined in AEON."
            },
            "event_format_other": {
               "$ref": "#/$defs/EventFormatSpecification",
               "description": "If event_format is set to 'other' then this property must be used to provide a label of the event type."
            },
            "event_mode": {
               "$ref": "#/$defs/EventMode",
               "description": "The event mode describes whether the event is a physical, virtual or hybrid event."
            },
            "event_status": {
               "$ref": "#/$defs/EventStatus"
            },
            "id": {
               "type": "string"
            },
            "in_series": {
               "description": "The relation used to provide the series of which an AcademicEvent is a part.",
               "type": "string"
            },
            "landing_page": {
               "description": "The website to which the persistent identifier is linking and which contains all the metadata about an academic event or series.",
               "type": "string"
            },
            "logo": {
               "type": "string"
            },
            "metrics": {
               "items": {
                  "$ref": "#/$defs/Metric"
               },
               "type": "array"
            },
            "multiple_days": {
               "description": "A boolean property that if true means that the academic event spans multiple days.",
               "type": "boolean"
            },
            "ordinal": {
               "description": "The ordnial number of an academic event within its series.",
               "type": "integer"
            },
            "organizers": {
               "items": {
                  "$ref": "#/$defs/Organizer"
               },
               "type": "array"
            },
            "outputs": {
               "description": "The published works that are related to the academic event or event series, such as proceedings and video recordings of talks.",
               "items": {
                  "type": "string"
               },
               "type": "array"
            },
            "related_to": {
               "items": {
                  "$ref": "#/$defs/ProcessRelation"
               },
               "type": "array"
            },
            "sponsors": {
               "items": {
                  "type": "string"
               },
               "type": "array"
            },
            "start_date": {
               "description": "The start date of an academic event or event series. Wheres the latter will in reality most likely be the start date of the first event of this series, unless there is some other source from which it is possible to derive the date of the inception of the series.",
               "format": "date-time",
               "type": "string"
            },
            "summary": {
               "type": "string"
            },
            "topics": {
               "items": {
                  "type": "string"
               },
               "type": "array"
            },
            "website": {
               "type": "string"
            }
         },
         "required": [
            "id",
            "denoted_by",
            "start_date",
            "end_date",
            "organizers",
            "event_status"
         ],
         "title": "AcademicEvent",
         "type": "object"
      },
      "AcademicEventSeries": {
         "additionalProperties": false,
         "description": "An academic event series describes the set of academic events which take place on a regular basis and thus have an established common identity. This identity is constituted, for example, through institutional continuity in the hosting of a series (e.g. by a specialised society), thematic focuses and/or a common label under which a series is defined (particularly name and acronym). Nevertheless, it is possible that each of these criteria may change over time.",
         "properties": {
            "academic_fields": {
               "description": "A property used to describe the scientific subject of the planned process according to some controlled vocabulary or thesaurus. Requires the as subproperties the name and if possible the URL of the identifiying scheme.",
               "items": {
                  "$ref": "#/$defs/AcademicField"
               },
               "type": "array"
            },
            "alternative_ids": {
               "items": {
                  "$ref": "#/$defs/Identifier"
               },
               "type": "array"
            },
            "contact": {
               "type": "string"
            },
            "denoted_by": {
               "$ref": "#/$defs/ProcessName",
               "description": "'denoted_by' used to refer to the name of the academic event or series, which itself has further properties to specify its type (e.g. official name, acronym, etc)."
            },
            "end_date": {
               "description": "Similar to start_date but only for the end of an academic event or event series.",
               "format": "date-time",
               "type": "string"
            },
            "id": {
               "type": "string"
            },
            "landing_page": {
               "description": "The website to which the persistent identifier is linking and which contains all the metadata about an academic event or series.",
               "type": "string"
            },
            "logo": {
               "type": "string"
            },
            "metrics": {
               "items": {
                  "$ref": "#/$defs/Metric"
               },
               "type": "array"
            },
            "organizers": {
               "items": {
                  "$ref": "#/$defs/Organizer"
               },
               "type": "array"
            },
            "outputs": {
               "description": "The published works that are related to the academic event or event series, such as proceedings and video recordings of talks.",
               "items": {
                  "type": "string"
               },
               "type": "array"
            },
            "series_of": {
               "description": "The relation used to provide the events belonging to an AcademicEventSeries.",
               "items": {
                  "$ref": "#/$defs/AcademicEvent"
               },
               "type": "array"
            },
            "sponsors": {
               "items": {
                  "type": "string"
               },
               "type": "array"
            },
            "start_date": {
               "description": "The start date of an academic event or event series. Wheres the latter will in reality most likely be the start date of the first event of this series, unless there is some other source from which it is possible to derive the date of the inception of the series.",
               "format": "date-time",
               "type": "string"
            },
            "summary": {
               "type": "string"
            },
            "topics": {
               "items": {
                  "type": "string"
               },
               "type": "array"
            },
            "website": {
               "type": "string"
            }
         },
         "required": [
            "id",
            "denoted_by",
            "start_date",
            "end_date",
            "organizers"
         ],
         "title": "AcademicEventSeries",
         "type": "object"
      },
      "AcademicField": {
         "additionalProperties": false,
         "description": "An academic field is the scientific subject of the planned process according to some controlled vocabulary or thesaurus and as such requires the scheme URI.",
         "properties": {
            "scheme_name": {
               "type": "string"
            },
            "scheme_uri": {
               "type": "string"
            },
            "value": {
               "type": "string"
            }
         },
         "required": [
            "scheme_name"
         ],
         "title": "AcademicField",
         "type": "object"
      },
      "City": {
         "additionalProperties": false,
         "description": "",
         "properties": {
            "id": {
               "type": "string"
            },
            "name": {
               "type": "string"
            }
         },
         "required": [
            "id"
         ],
         "title": "City",
         "type": "object"
      },
      "ConfIDentRecords": {
         "additionalProperties": false,
         "description": "This is a container to be able to bundle academic event and series data in one data file (e.g. YAML or JSON).",
         "properties": {
            "events": {
               "description": "An attribute that specifies a list of academic events within this container.",
               "items": {
                  "$ref": "#/$defs/AcademicEvent"
               },
               "type": "array"
            },
            "series": {
               "description": "An attribute that specifies a list of academic event series within this container.",
               "items": {
                  "$ref": "#/$defs/AcademicEventSeries"
               },
               "type": "array"
            }
         },
         "required": [],
         "title": "ConfIDentRecords",
         "type": "object"
      },
      "Contributor": {
         "additionalProperties": false,
         "description": "",
         "properties": {
            "persons": {
               "items": {
                  "$ref": "#/$defs/Person"
               },
               "type": "array"
            },
            "type": {
               "$ref": "#/$defs/ContributorType"
            }
         },
         "required": [],
         "title": "Contributor",
         "type": "object"
      },
      "ContributorType": {
         "description": "",
         "enum": [
            "presenter",
            "keynote speaker",
            "moderator",
            "attendee"
         ],
         "title": "ContributorType",
         "type": "string"
      },
      "Country": {
         "additionalProperties": false,
         "description": "",
         "properties": {
            "id": {
               "type": "string"
            },
            "name": {
               "type": "string"
            }
         },
         "required": [
            "id"
         ],
         "title": "Country",
         "type": "object"
      },
      "Deadline": {
         "additionalProperties": false,
         "description": "",
         "properties": {
            "deadline_date": {
               "format": "date-time",
               "type": "string"
            },
            "deadline_other": {
               "type": "string"
            },
            "type": {
               "$ref": "#/$defs/DeadlineType"
            }
         },
         "required": [
            "deadline_date",
            "type"
         ],
         "title": "Deadline",
         "type": "object"
      },
      "DeadlineType": {
         "description": "",
         "enum": [
            "submission deadline",
            "notification deadline",
            "abstract deadline",
            "camera-ready deadline",
            "demo deadline",
            "paper deadline",
            "poster deadline",
            "tutorial deadline",
            "workshop deadline"
         ],
         "title": "DeadlineType",
         "type": "string"
      },
      "EventFormat": {
         "description": "The following definitions attempt to provide descriptions to distinguish different academic event formats, even though the definitions are not always clearly distinguishable in their everyday use and are often used synonymously. An event type should be understood, according to AEON, as a plan specification that specifies the sociocultural format or type of the academic event by providing details on the objectives, conditions and actions needed in its realization.",
         "enum": [
            "colloquium",
            "conference",
            "congress",
            "session",
            "poster session",
            "talk",
            "keynote speech",
            "event track",
            "forum",
            "hackathon",
            "seminar",
            "symposium",
            "tutorial",
            "workshop"
         ],
         "title": "EventFormat",
         "type": "string"
      },
      "EventFormatSpecification": {
         "additionalProperties": false,
         "description": "",
         "properties": {
            "other": {
               "type": "string"
            }
         },
         "required": [],
         "title": "EventFormatSpecification",
         "type": "object"
      },
      "EventMode": {
         "description": "",
         "enum": [
            "on site",
            "online",
            "hybrid"
         ],
         "title": "EventMode",
         "type": "string"
      },
      "EventStatus": {
         "description": "",
         "enum": [
            "as scheduled",
            "postponed",
            "delayed",
            "canceled",
            "planned"
         ],
         "title": "EventStatus",
         "type": "string"
      },
      "Identifier": {
         "additionalProperties": false,
         "description": "",
         "properties": {
            "scheme_name": {
               "type": "string"
            },
            "scheme_uri": {
               "type": "string"
            },
            "value": {
               "type": "string"
            }
         },
         "required": [
            "scheme_name"
         ],
         "title": "Identifier",
         "type": "object"
      },
      "Location": {
         "additionalProperties": false,
         "description": "",
         "properties": {
            "city": {
               "type": "string"
            },
            "country": {
               "type": "string"
            },
            "lattitude": {
               "type": "number"
            },
            "longitude": {
               "type": "number"
            },
            "meeting_url": {
               "type": "string"
            },
            "region": {
               "type": "string"
            },
            "venue": {
               "type": "string"
            }
         },
         "required": [],
         "title": "Location",
         "type": "object"
      },
      "Metric": {
         "additionalProperties": false,
         "description": "",
         "properties": {
            "int_value": {
               "type": "integer"
            },
